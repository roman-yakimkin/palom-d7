/**
 * Implements hook_field_schema().
 */
function palom_field_cr_field_schema($field) {
  switch($field['type']){
    case 'field_geo_cr':
      $columns = [
        'country_id' => [
          'type' => 'int',
          'default' => 0,
        ],
        'region_id' => [
          'type' => 'int',
          'default' => 0,
        ]
      ];
      $indexes = [
        'country_id' => ['country_id'],
        'region_id' => ['region_id'],
      ];
      break;
  }
  return [
    'columns' => $columns,
    'indexes' => $indexes,
  ];
}

